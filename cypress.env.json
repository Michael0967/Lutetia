{
  "password": {
    "input": "#password"
  },

  "cart": {
    "section": ".shopify-section.side-cart",
    "open": "[data-cy='cart-icon']",
    "close": "[data-cy='close-sidecart']",
    "overlay": ".overlay",
    "emptyMessage": ".cart-items__empty",
    "item": "[data-cy='cart-item']",
    "plusQunatity": "[data-cy='quantity-element-plus']",
    "inputQuantity": "[data-cy='cart-item-quantity']",
    "minusQuantity": "[data-cy='quantity-element-minus']",
    "trash": "[data-cy='cart-item-delete']",
    "counterInternal": ".side-cart__count.side-cart-count-js",
    "counterExternal": "[data-cy='cart-count']",
    "upsell": {
      "section": "[data-cy='cart-upsell']",
      "arrow": "[data-cy='button-arrow']",
      "cardProduct": "[data-cy='cart-upsell-product']",
      "buttonAdd": "[data-cy='upsell-product-add-to-cart']"
    }
  },

  "product": {
    "sectionDetail": "[data-cy='main-product-detail']"
  },

  "account": {
    "login": {
      "email": "[data-cy='customer-email']",
      "password": "[data-cy='customer-password']"
    },

    "forgot": {
      "go": "[data-cy='btn-forgot-password']",
      "input": "[data-cy='recover-email']",
      "messages": ".form-message.form-message--success",
      "btn_cancel": "[data-cy='btn-cancel']"
    },

    "create_account": {
      "go": "[data-cy='btn-create-account']",
      "name": "[data-cy='input-first-name']",
      "last_name": "[data-cy='input-last-name']",
      "email": "[data-cy='input-email']",
      "password": "[data-cy='input-password']",
      "button_create": "[data-cy='btn-create-account']",
      "message_error": ".form-message--error"
    }
  },


  "search": {
    "open": "[data-cy='search-icon']",
    "input": "[data-cy='input-search']",
    "close": "[data-cy='btn-close-search']",
    "results": "#predictive-search-results",
    "list": ".predictive-search__list-item"
  }
}